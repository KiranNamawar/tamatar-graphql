# Tamatar GraphQL Backend - Environment Variables
# Copy this file to .env and fill in the required values

# Application Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000

# Database Configuration
# Required: PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/tamatar_dev

# JWT Authentication
# Required: Strong secret key for JWT signing (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Service Configuration (Pluck)
# Required for email verification and notifications
# Get your secret key from: https://usepluck.com
PLUCK_SECRET_KEY=your-pluck-secret-key
EMAIL_FROM_ADDRESS=noreply@tamatar.dev
EMAIL_FROM_NAME=Tamatar

# GitHub OAuth Configuration
# Required for GitHub integration features
# Get these from: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_ROUNDS=12

# Session Management
SESSION_CLEANUP_INTERVAL_MS=3600000

# Development/Testing Configuration
SKIP_EMAIL_VERIFICATION=false
ENABLE_PLAYGROUND=true

# Analytics Configuration
ANALYTICS_ENABLED=false

# ====================================
# Required Variables for Production:
# ====================================
# - DATABASE_URL (PostgreSQL connection string)
# - JWT_SECRET (at least 64 characters)
# - PLUCK_SECRET_KEY, EMAIL_FROM_ADDRESS
# - GITHUB_CLIENT_ID, GITHUB_CLIENT_SECRET
# - Set CORS_ORIGIN to your frontend domain
# - Set ENABLE_PLAYGROUND=false
# - Use HTTPS for all URLs in production

# ====================================
# Quick Setup for Development:
# ====================================
# 1. Copy this file to .env
# 2. Set up a PostgreSQL database
# 3. Generate a strong JWT_SECRET
# 4. Get Pluck secret key from https://usepluck.com
# 5. Create GitHub OAuth app
# 6. Run: bun install && bun db:migrate && bun dev
